<h1 class="vendor-heading"> <%= @vendor.name %></h1>

<input type="text" placeholder="Product name or sku"></input>
<button class=search>Search</button>


<h3> Product Guide </h3>

<table>
  <colgroup span="7"></colgroup>
  <tr>
    <th></th>
    <th>Product Name</th>
    <th>SKU #</th>
    <th>Pack/Size</th>
    <th>Lead Time</th>
    <th>Price</th>
    <th>Quantity</th>
  </tr>
  <% @products.each do |product| %>
    <tr>
      <td>
        <% if product.images.present? %>
          <%= image_tag product.images.first.attachment.url(:mini) %>
        <% else %>
           No IMG
        <% end %>
      </td>
      <td><a href="<%= vendor_product_url(product.vendor_id, product.id) %>"><%= product.name %></a></td>
      <td><%=Spree::Variant.find_by_product_id(product.id).sku %></td>
      <td>pack/size</td>
      <td>lead time</td>
      <td><%= number_to_currency(product.price) %></td>
      <td> - <input type="text" placeholder="QTY"></input> + </td>
    </tr>
  <% end %>
  <tfoot>
    <tr>
      <td><button class="add-to-order">Add to Order</button></td>
    </tr>
  </tfoot>
</table>
