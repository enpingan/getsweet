<% content_for :page_title do %>
  <%= link_to "Customers", admin_customers_path %> /
  <%= @customer.name %>
<% end %>

<% content_for :sidebar do %>
  <ul class="nav nav-pills nav-stacked" data-hook="admin_product_tabs">
    <%= content_tag :li, class: ('active' if current == :details) do %>
      <%= link_to_with_icon 'edit', Spree.t(:details), edit_admin_customer_url(@customer) %>
    <% end if can?(:admin, Spree::Customer) %>
    <%= content_tag :li, class: ('active' if current == :images) do %>
      <%= link_to_with_icon 'picture', Spree.t(:images), admin_customer_customer_images_url(@customer) %>
    <% end if can?(:admin, Spree::CustomerImage) %>
  </ul>
<% end %>
