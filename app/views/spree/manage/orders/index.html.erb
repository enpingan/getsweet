<h1> <%= @vendor.name %> </h1>

<h1>Orders Overview</h1>
<section class="orders-overview-filters">
  <ul>
    <li>Filter by [Customer dropdown]</li>
    <li>Search [Customer search box]</li>
    <li>Select Delivery [Date dropdown]</li>
  </ul>
</section>
<a href="<%= new_manage_order_url %>" class="new-order-button">Create New Order</a>
<table class="orders-overview">
  <colgroup span="6"></colgroup>
  <tr>
    <th>Customer</th>
    <th>Order #</th>
    <th>Delivery Date</th>
    <th>Total Items</th>
    <th>Total</th>
    <th>Status</th>
    <th>Approve <input type="checkbox">Select All</input></th>
  </tr>
  <% @orders.each do |order| %>
    <tr>
      <td>
				<% if order.customer %>
					<%= order.customer.name %>
				<% else %>
					TBD <!-- NEED TO UPDATE -->
				<% end %>
			</td>
      <td>
				<a href="<%= edit_manage_order_url(order) %>"><%= order.number %></a>
			</td>
      <td><%= order.delivery_date.to_date.to_formatted_s(:long) %></td>
      <td><%=order.item_count%></td>
      <td><%=number_to_currency(order.total)%></td>
      <td><%= order.state %></td>
      <td>
        <!-- remove quotes and change to order.status when set up -->
        <% if 'Action Req' == 'Action Req' %>
          <input type="checkbox"></input>
        <% end %>
      </td>
    </tr>
  <% end %>

</table>


<button class="add-to-order">Confirm Orders</button>
