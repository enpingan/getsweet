

  <div class="form-group">
    <%= f.label :number, "Account #" %>
    <%= f.text_field :number, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :payment_terms, "Payment Terms (days)" %>
    <%= f.text_field :payment_terms, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :discount_type, "Discount Type" %>
    <%= f.select(:discount_type) do %>
      <option value="discount">Discount Percentage</option>
      <option value="percent_over">Percentage Over Cost</option>
      <option value="none">None</option>
    <% end %>
  </div>

  <div class="form-group">
    <%= f.label :discount, "Discount Percentage" %>
    <%= f.text_field :discount, class: 'form-control', placeholder: '(ex use 0.05 for 5%)' %>
  </div>

  <div class="form-group">
    <%= f.label :cost_price_discount, "Percentage Over Cost" %>
    <%= f.text_field :cost_price_discount, class: 'form-control', placeholder: '(ex use 0.05 for 5%)' %>
  </div>
