<h1 class="catalog-title"><%= @customer.name %></h1>
<a href="<%= new_manage_order_url %>" class="new-order-button">Start New Order</a>
<div class="clear"></div>

<section class="customer-top group">
  <ul class="customer-right">
    <li>Account ID: <%= @customer.account_id %> </li>
    <li>Current Balance: </li>
    <li>Past Due Balance:</li>
    <!-- temporary terms -->
    <li>Payment Terms: <%= @vendor.payment_terms %> Days</li>
    <li><a href=" <%= manage_orders_url %>">Orders</a></li>
    <li><a href="">Invoices</a></li>
  </ul>

	<% if @customer.ship_address %>
  <ul class="contact-left">
    <li>Primary Contact: <%= "#{@customer.ship_address.firstname} #{@customer.ship_address.lastname}" %></li>
    <li>Primary Phone: <%#= @customer.phone %></li>
    <li>Primary Email: <%#= @customer.email %></li>
    <li>Customer Address: </li>
      <ul class="address">
        <li><%= @customer.ship_address.address1 %></li>
        <% if @customer.ship_address.address2 %>
          <li><%= @customer.ship_address.address2 %></li>
        <% end %>
        <li> <%= @customer.ship_address.city %></li>
        <li> <%= @customer.ship_address.state_name %></li>
        <li> <%= @customer.ship_address.zipcode %></li>
      </ul>
  </ul>
	<% else %>
		No address found.
	<% end %>
</section>
<a href="<%= edit_manage_customer_url %>" class="btn-new-contact">Edit contact</a>
