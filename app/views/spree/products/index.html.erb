<h1 class="vendor-heading"> <%= @vendor.name %></h1>

<input type="text" placeholder="Product name or sku"></input>
<button class=search>Search</button>


<h3> Product Guide</h3>

<table>
  <colgroup span="7"></colgroup>
  <tr>
    <th></th>
    <th>Product Name</th>
    <th>SKU #</th>
    <th>Pack/Size</th>
    <th>Lead Time</th>
    <th>Price</th>
    <th>Quantity</th>
  </tr>
  <% @products.each do |product| %>
    <tr>
      <td>
        <% if product.images.present? %>
          <%= image_tag product.images.first.attachment.url(:mini) %>
        <% else %>
           No IMG
        <% end %>
      </td>
      <td><a href="<%= vendor_product_url(product.vendor, product) %>"><%= product.name %></a></td>
      <td><%=Spree::Variant.find_by_product_id(product.id).sku %></td>
      <td>pack/size</td>
      <td>lead time</td>
      <td><%= number_to_currency(product.price) %></td>
      <td>
        <div class="cart-item-quantity count-block" data-hook="cart_item_quantity">
          <span href="#" class="minus count-buttons">-</span>
            <div class="count">
              <%#= item_form.object.quantity %>
            </div>
            <input type="text" placeholder="QTY"></input>
            <%#= item_form.number_field :quantity, :min => 0, :class => "line_item_quantity hide", :size => 5 %>
            <span href="#" class="plus count-buttons">+</span>
        </div>
      </td>

    </tr>
  <% end %>
  <tfoot>
    <tr>
      <td>
        <div class="add-to-cart">
          <br/>
          <div class="input-group">
            <span class="input-group-btn">
              <%= button_tag :class => 'add-to-order btn btn-success', :id => 'add-to-cart-button', :type => :submit do %>
                <%= Spree.t(:add_to_cart) %>
              <% end %>
            </span>
          </div>
      </td>
    </tr>
  </tfoot>
</table>


